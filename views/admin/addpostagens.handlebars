        <div class="form-add-erro">
            <h2>{{texto}}</h2>
        </div>
    {{else}}
    
    {{/each}}
</div>




<div class="form-add-categoria add-margem-form-postagem">
    <h2 >Nova Postagem</h2>
    <form action="/admin/postagens/novas"  method="POST">
        <label for="titulo">Titulo:</label>
        <input type="text" id="titulo" name="titulo" placeholder="Titulo da postagem" required>
        <label for="slug">Slug:</label>
        <input type="text" id="slug" name="slug" placeholder="Slug  da postagem" required>
        
        <label for="descricao">Descrição:</label>
        <input type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" required>
        
        <label for="conteudo">Conteúdo:</label>
        <textarea type="text" id="slug" name="conteudo" placeholder="Conteúdo  da postagem"></textarea required>
        <label for="categoria">Categoria:</label>
        <select name="categoria">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhuma categoria resgistrada</option>
            {{/each}}
        </select>
        <button type="submit" class="button-criar-categoria">Criar</button>
    </form>
</div>
