<div class="listagem-de-categorias">
    <h2>Lista de Categorias</h2>
    <hr>
    <a href="/admin/categorias/add">
        <button class="btn-nova-categoria">Nova categoria</button>
    </a>
</div>

{{#each categorias}}
    <div class="container-categorias">
        <div class="card-listagem-categorias">
            <h3>{{nome}}</h3>
            <small><strong>Slug:</strong> {{slug}}</small>
            <small><strong>Data de criação:</strong> {{date}}</small>
            <div class="manipulando-as-categorias">
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn-editar-categoria">Editar</button></a>
                <form action="/admin/categorias/deletar" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn-deletar-categoria" type="submit">Deletar</button>
                </form>
            </div>
             
        </div>
    </div>
{{else}}

{{/each}}

