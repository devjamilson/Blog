<section class="add-margem-form-postagem">
    <h1 class="titulo-registro">Crie sua conta:</h1>
    <div class="form-add-categoria ">
        <form action="" method="post">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control" required>
            <label for="email">Email: </label>
                <input type="email" name="email" class="form-control" required>
            <label for="senha">Senha: </label>
                <input type="password" name="senha" class="form-control" required>
            <label for="senha2">Repita a sua senha: </label>
                <input type="password" name="senha2" class="form-control" required>
            <button type="submit" class="button-criar-categoria">Criar conta</button>
        </form>    
    </div>
</section>